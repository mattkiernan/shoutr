<h2>Shouts</h2>

<div>
  <%= form_for @shout do |form| %>
    <%= form.text_field :body %>
    <%= form.submit "Shout!" %>
  <% end %>
</div>
<h3>Users I follow</h3>
<ul>
  <% @users_i_follow.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>
<h3>Users I do not follow</h3>
<ul>
  <% @users_i_do_not_follow.each do |user| %>
  <% end %>
</ul>
<h3>Shouts</h3>
<ul>
  <% @shouts.each do |shout| %>
    <li><%= shout.body %></li>
  <% end %>
</ul>
